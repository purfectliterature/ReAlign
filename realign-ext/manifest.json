{
    "manifest_version": 2,
    "name": "ReAlign for Coursemology",
    "version": "1.1.3",
    "description": "An experimental fix for Coursemology line numbers misalignment in Chrome. Made with love by Phillmont.",
    "content_scripts": [{
        "css": ["realign.css"],
        "matches": [
            "https://coursemology.org/courses/*/assessments/*/submissions/*/edit*",
            "https://www.coursemology.org/courses/*/assessments/*/submissions/*/edit*",
            "http://coursemology.org/courses/*/assessments/*/submissions/*/edit*",
            "http://www.coursemology.org/courses/*/assessments/*/submissions/*/edit*"
        ]
    }],
    "icons": {
        "64": "realign-64.png"
    }
}